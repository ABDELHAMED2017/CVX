#! /bin/sh

# Key directories
SRCBASE=`pwd | sed 's@/doc$@@'`
WWWDIR=$SRCBASE/WWW
DSTDIR=$SRCBASE/dist
WWWDST=cardinal.stanford.edu:~boyd/WWW/cvx

echo Updating: $WWWDIR --\> $WWWDST
rsync -rlv --delete -e ssh $WWWDIR/ $WWWDST/

echo -n Updating local distribution copy...
rm -rf $DSTDIR
mkdir -p $DSTDIR
cd $DSTDIR
tar xfz $WWWDIR/cvx.tar.gz
mv cvx cvx.foo
mv cvx.foo/* .
rmdir cvx.foo
echo done.

